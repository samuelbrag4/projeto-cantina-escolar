<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title>Cadastro de Produtos</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
        <h2>Cadastro de Produtos</h2>
        <nav>
            <a href="/dashboard">Dashboard</a> |
            <a href="/gestao-estoque">Gest√£o de Estoque</a> |
            <a href="/logout">Sair</a>
        </nav>
    </header>

    <main>
        <section class="busca">
            <form method="GET" action="/cadastro-produto">
                <input type="text" name="busca" value="<%= busca %>" placeholder="üîç Buscar produto...">
                <button type="submit">Buscar</button>
            </form>
        </section>

        <section class="novo-produto">
            <h3>Cadastrar novo produto</h3>
            <form action="/cadastro-produto" method="POST" class="form-produto">
                <input type="number" name="id_estoque" placeholder="ID estoque (opcional)">
                <input type="text" name="nome" placeholder="Nome do produto" required>
                <input type="number" step="0.01" name="preco" placeholder="Pre√ßo" required>
                <button type="submit">Salvar</button>
            </form>
        </section>

        <section>
            <h3>Produtos cadastrados</h3>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Pre√ßo</th>
                        <th>Qtd</th>
                        <th>A√ß√µes</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (!produtos || produtos.length === 0) { %>
                        <tr><td colspan="5">Nenhum produto cadastrado.</td></tr>
                    <% } else { %>
                        <% produtos.forEach(p => { %>
                            <tr>
                                <td><%= p.id %></td>
                                <td><%= p.nome %></td>
                                <td>R$ <%= Number(p.preco).toFixed(2) %></td>
                                <td><%= p.quantidade %></td>
                                <td>
                                    <form action="/cadastro-produto/update/<%= p.id %>" method="POST" style="display:inline-block">
                                        <input class="small-input" type="text" name="nome" value="<%= p.nome %>" />
                                        <input class="small-input" type="number" step="0.01" name="preco" value="<%= Number(p.preco).toFixed(2) %>" />
                                        <button type="submit">Atualizar</button>
                                    </form>
                                    <form action="/cadastro-produto/delete/<%= p.id %>" method="POST" style="display:inline-block">
                                        <button type="submit" onclick="return confirm('Excluir o produto <%= p.nome %>?')">Excluir</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </section>
    </main>
</body>

</html>